<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="405px"
    android:layout_height="650px"
    android:layout_marginLeft="20px"
    >


    <ImageView
        android:id="@+id/fragment_homepage_recyclerview_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/ceshizhuanyongmeinv" />
   <LinearLayout
       android:layout_alignParentBottom="true"
       android:layout_width="match_parent"
       android:layout_height="170px"
       android:background="@color/text_color"
       android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20px"

        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/homepage_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GENTLE MONSTER"
                android:textSize="20px"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
            <TextView

                android:id="@+id/homepage_price"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="111111"
                android:textSize="20px"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/rmb_icon"
                android:layout_toLeftOf="@id/homepage_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textSize="20px"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_gravity="right"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/homepage_comefrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:textSize="20px"
            android:text="韩国首尔"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px"
            android:background="@mipmap/black_line"/>
        <TextView
            android:id="@+id/homepage_modle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:textSize="25px"
            android:text="女款|罗马假日太阳镜"/>






    </LinearLayout>



   </LinearLayout>
    



</RelativeLayout>