<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_atlas_marginleft_right"
        android:layout_marginTop="@dimen/activity_atlas_title_margintop"
        android:text="@string/atlas_title"
        android:textSize="@dimen/activity_atlas_title_textsize"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_atlas_marginleft_right"
        android:layout_marginRight="@dimen/activity_atlas_marginleft_right"
        android:layout_marginTop="@dimen/activity_atlas_line_margintop"
        android:src="@mipmap/black_horiaontal_line" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_atlas_marginleft_right"
        android:layout_marginRight="@dimen/activity_atlas_marginleft_right"
        android:layout_marginTop="@dimen/activity_atlas_line_margintop" />



</LinearLayout>