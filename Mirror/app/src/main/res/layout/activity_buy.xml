<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30px"
    android:layout_marginRight="30px"
    android:layout_marginTop="20px"
    android:orientation="vertical"
    android:background="#f1f1f1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="我所有地址"
        android:textSize="32px" />

    <ImageView
        android:id="@+id/buy_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/close" />

    <ImageView
        android:id="@+id/line_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buy_delete"
        android:layout_marginTop="10px"
        android:background="@mipmap/black_horizontal_line"
        android:layout_marginLeft="1px"/>

    <LinearLayout
        android:id="@+id/body_one"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/line_image_view"
        android:layout_marginTop="50px"
        android:background="@drawable/bg_liner"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:text=""
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/address_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:text="请添加收件人信息"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/phone_number_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:text=""
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/body_two"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_below="@+id/body_one"
        android:background="@drawable/bg_liner">

        <TextView
            android:id="@+id/goto_alladdress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="填写地址" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/body_three"
        android:layout_marginTop="20px"
        android:layout_below="@+id/body_two"
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:background="@drawable/bg_liner">
        <ImageView
            android:id="@+id/buy_glasses_iv"
            android:layout_width="214px"
            android:layout_height="match_parent"
            android:layout_marginLeft="2px"/>
        <TextView
            android:id="@+id/buy_glasses_title"
            android:layout_marginTop="45px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/buy_glasses_iv"
            android:textSize="25px"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/buy_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:layout_below="@+id/buy_glasses_title"
            android:layout_toRightOf="@id/buy_glasses_iv"
            android:textSize="25px"
            android:textColor="@android:color/black" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/body_fore"
        android:layout_below="@+id/body_three"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginTop="20px"
        android:background="@drawable/bg_liner">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:text="运费 :"
         android:layout_marginLeft="40px"
         android:gravity="center"
         android:textSize="26px" />
        <TextView
            android:id="@+id/freight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:text=""
            android:gravity="center"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/body_five"
        android:layout_below="@+id/body_fore"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/bg_liner">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="小计 :"
            android:layout_marginLeft="40px"
            android:gravity="center"
            android:textSize="26px" />
        <TextView
            android:id="@+id/subtotal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:text=""
            android:gravity="center"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/place_an_order"
        android:layout_marginTop="50px"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_below="@+id/body_five"
        android:background="@mipmap/login_btn"
        android:text="确认下单"
        android:textColor="@android:color/white"
        android:gravity="center"/>
</RelativeLayout>